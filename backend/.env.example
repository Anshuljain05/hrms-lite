# ============================================================================
# HRMS-Lite Backend Environment Configuration
# ============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env file to version control
# ============================================================================

# ====================
# APPLICATION SETTINGS
# ====================

# Application environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Host and port for the API server
HOST=0.0.0.0
PORT=8000

# Enable auto-reload on code changes (disable in production)
RELOAD=true

# ====================
# DATABASE SETTINGS
# ====================

# Database URL - supports SQLite and PostgreSQL
# SQLite (for development):
#   DATABASE_URL=sqlite:///./hrms.db
# PostgreSQL (for production):
#   DATABASE_URL=postgresql://username:password@localhost:5432/hrms_db
DATABASE_URL=sqlite:///./hrms.db

# Database pool settings for production (PostgreSQL only)
DB_POOL_SIZE=3
DB_MAX_OVERFLOW=5
DB_POOL_RECYCLE=600

# Enable SQL query logging (for debugging)
SQL_ECHO=false

# ====================
# CORS & SECURITY
# ====================

# Allowed CORS origins (comma-separated)
# For development: http://localhost:5173,http://localhost:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ====================
# OPTIONAL: API KEYS & SECRETS
# ====================

# Add API keys, secrets, or other sensitive data here (if needed)
# API_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here

# ====================
# OPTIONAL: EXTERNAL SERVICES
# ====================

# Email service configuration (if implementing email features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@hrms-lite.com

# ====================
# DOCUMENTATION
# ====================
# HOST and PORT: The server will be accessible at http://HOST:PORT
# DATABASE_URL: 
#   - Local development: sqlite:///./hrms.db (creates hrms.db in backend folder)
#   - Production: Use PostgreSQL connection string from Railway/Heroku
# ALLOWED_ORIGINS: Frontend URLs that can make requests to this API
# RELOAD: Set to false in production for performance
# LOG_LEVEL: Use DEBUG for development, INFO for staging, ERROR for production
